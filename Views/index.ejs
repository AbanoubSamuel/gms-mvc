  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <style>
    @keyframes pulse {
      0% {
        transform: scale(0.1);
        opacity: 0;
      }

      50% {
        opacity: 0.4;
      }

      100% {
        transform: scale(1.6);
        opacity: 0;
      }
    }

    div {
      background-color: #ff5733;
      border-radius: 50%;
      position: absolute;
      margin: auto auto;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      width: 200px;
      height: 200px;
    }

    div:nth-child(1) {
      animation: pulse 2s infinite;
    }

    div:nth-child(2) {
      animation: pulse 2s infinite 0.3s;
    }

    div:nth-child(3) {
      animation: pulse 2s infinite 0.6s;
    }

    div:nth-child(4) {
      text-align: center;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      color: #fff;
      font-size: 14px;
      line-height: 80px;
      width: 80px;
      height: 80px;
    }
  </style>
</head>

